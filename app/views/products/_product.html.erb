<div class="prod">
  <% if name_is_link %>
    <p><%= link_to product.name, product %></p>
  <% else %>
    <p><%= product.name %></p>
  <% end %>
  <ul>
    <li>
      <strong>Description:</strong><%= product.description %>
    </li>
    <li>
      <strong>Price:</strong><%= product.price %>
    </li>
  </ul>
</div>