<div class="column">
  <div class="card prod">
    <div class="card-content">
      <p class="title is-4 ">
      <% if name_is_link %>
        <%= link_to product.name, product %>
      <% else %>
        <%= product.name %>
      <% end %>
      </p>
      <ul>
        <li>
          <strong>Description:</strong><%= product.description %>
        </li>
        <li>
          <strong>Price:</strong><%= product.price %>
        </li>
      </ul>
    </div>
  </div>
</div>